<body>
    <%- include('../includes/nav.ejs') %>
    <main>
        <h1>Hello on the forum News List!</h1>
        <% if (news.length > 0) { %>
            <h2>News list</h2>
            <% for (let newsItem of news) { %>
                <div><%= newsItem.title %></div>
                <div><%= newsItem.imageUrl %></div>
                <div><%= newsItem.description %></div>
                <div><%= newsItem.content %></div>
                <button><a href="/news-list/<%=newsItem._id%>">See news</a></button>
            <% } %>
        <% } else { %>
            <h2>There are not any news.</h2>
        <% } %>
    </main>
    <%- include('../includes/end.ejs') %>