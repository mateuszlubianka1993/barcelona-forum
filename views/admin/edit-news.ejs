<%- include('../includes/head.ejs') %>
</head>
<body>
    <%- include('../includes/nav.ejs') %>
    <main>
        <h1>Hello on the forum Add News Page!</h1>
        <form action="/admin/<%if(editing) {%>edit-news<%} else {%>add-news<%}%>" method="POST">
            <label for="title">Title</label>
            <input type="text" name="title" id="title" value="<%if(editing) {%><%=newsItem.title%><%}%>">
            <label for="imageUrl">Image Url</label>
            <input type="text" name="imageUrl" id="imageUrl" value="<%if(editing) {%><%=newsItem.imageUrl%><%}%>">
            <label for="description">Description</label>
            <textarea name="description" id="description" rows="5"><%if(editing) {%><%=newsItem.description%><%}%></textarea>
            <label for="content">Content</label>
            <textarea name="content" id="content" rows="10"><%if(editing) {%><%=newsItem.content%><%}%></textarea>
            <%if(editing) {%>
                <input type="hidden" name="newsId" value="<%=newsItem.id%>">
            <%}%>
            <button type="submit">Submit</button>
        </form>
    </main>
    <%- include('../includes/end.ejs') %>